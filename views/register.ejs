<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/global.css">
  <title>Register</title>
</head>

<body>

  <h1>register</h1>

  <!-- Formulaire HTML d'inscription a styliser-->
  <form class="registerForm" action="/users/register" method="POST">

    <div class="inputForm">
      <input type="text" id="name" name="name" placeholder="name" required>
    </div>

    <div class="inputForm">
      <input type="email" id="email" name="email" placeholder="email" required>
    </div>

    <div class="inputForm">
      <input type="password" id="password" name="password" placeholder="password" required>
    </div>

    <div class="inputForm">
      <input type="password" id="password2" name="password2" placeholder="confirm password" required>
    </div>

    <div>
      <button type="submit" value="register" class="modern-btn" style="--clr1: #696969; --clr2: #d4d4d4;">
        <span>Valider</span>
        <div class="modern-btn-shine"></div>
      </button>
    </div>

    <a href="/users/login">Already got an account ? Login here</a>
  </form>

  <!-- Zone message lorsque une erreur est détectée-->
  <ul> 
    <% if(typeof errors != 'undefined') { %>
      <% errors.forEach(error=> { %>
        <li class="error"><%= error.message %></li>
      <% }) %>
    <% } %>
  </ul>

</body>
</html>